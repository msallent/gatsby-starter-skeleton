{
  "name": "gatsby-starter-skeleton",
  "license": "MIT",
  "private": true,
  "version": "3.0.0",
  "scripts": {
    "build": "gatsby build",
    "clean": "gatsby clean",
    "dev": "gatsby develop --host 0.0.0.0",
    "fix": "yarn fix:js && yarn fix:prettier",
    "fix:js": "yarn lint:js --fix",
    "fix:prettier": "yarn lint:prettier --write",
    "lint": "yarn lint:js && yarn lint:css && yarn lint:prettier",
    "lint:js": "eslint --ignore-path .gitignore . --ext js --ext ts --ext tsx",
    "lint:css": "stylelint --ignore-path .gitignore './src/**/*.ts'",
    "lint:prettier": "prettier --ignore-path .gitignore --check .",
    "serve": "gatsby serve --host 0.0.0.0",
    "type-check": "tsc",
    "plop": "plop"
  },
  "dependencies": {
    "babel-plugin-styled-components": "1.12.0",
    "gatsby": "3.7.2",
    "gatsby-plugin-image": "1.7.1",
    "gatsby-plugin-react-helmet": "4.7.1",
    "gatsby-plugin-sharp": "3.7.1",
    "gatsby-plugin-sitemap": "4.3.1",
    "gatsby-plugin-styled-components": "4.7.1",
    "gatsby-plugin-svgr": "3.0.0-beta.0",
    "gatsby-source-filesystem": "3.7.1",
    "gatsby-transformer-sharp": "3.7.1",
    "normalize.css": "8.0.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-helmet": "6.1.0",
    "styled-components": "5.3.0"
  },
  "devDependencies": {
    "@svgr/webpack": "5.5.0",
    "@types/node": "14.17.3",
    "@types/react": "17.0.11",
    "@types/react-dom": "17.0.8",
    "@types/react-helmet": "6.1.1",
    "@types/styled-components": "5.1.10",
    "@typescript-eslint/eslint-plugin": "4.27.0",
    "@typescript-eslint/parser": "4.27.0",
    "eslint": "7.29.0",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-import-resolver-typescript": "2.4.0",
    "eslint-plugin-import": "2.23.4",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-prettier": "3.4.0",
    "eslint-plugin-react": "7.24.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "gatsby-plugin-ts-config": "1.1.5",
    "lint-staged": "11.0.0",
    "plop": "2.7.4",
    "prettier": "2.3.1",
    "simple-git-hooks": "2.4.1",
    "stylelint": "13.13.1",
    "stylelint-config-recommended": "5.0.0",
    "stylelint-config-styled-components": "0.1.1",
    "stylelint-processor-styled-components": "1.10.0",
    "typescript": "4.3.4"
  },
  "simple-git-hooks": {
    "pre-commit": "npx tsc && npx lint-staged"
  },
  "lint-staged": {
    "src/**/*.{js,ts,tsx}": "eslint --fix",
    "src/**/*.ts": "stylelint"
  }
}
