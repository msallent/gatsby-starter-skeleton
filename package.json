{
  "name": "gatsby-starter-skeleton",
  "license": "MIT",
  "private": true,
  "version": "3.0.0",
  "scripts": {
    "build": "gatsby build",
    "clean": "gatsby clean",
    "dev": "gatsby develop --host 0.0.0.0",
    "fix": "yarn fix:js && yarn fix:prettier",
    "fix:js": "yarn lint:js --fix",
    "fix:prettier": "yarn lint:prettier --write",
    "lint": "yarn lint:js && yarn lint:css && yarn lint:prettier",
    "lint:js": "eslint --ignore-path .gitignore . --ext js --ext ts --ext tsx",
    "lint:css": "stylelint --ignore-path .gitignore './src/**/*.ts'",
    "lint:prettier": "prettier --ignore-path .gitignore --check .",
    "serve": "gatsby serve --host 0.0.0.0",
    "type-check": "tsc",
    "plop": "plop"
  },
  "dependencies": {
    "babel-plugin-styled-components": "1.13.3",
    "gatsby": "3.14.6",
    "gatsby-plugin-image": "1.14.2",
    "gatsby-plugin-react-helmet": "4.14.0",
    "gatsby-plugin-sharp": "3.14.3",
    "gatsby-plugin-sitemap": "4.10.0",
    "gatsby-plugin-styled-components": "4.14.0",
    "gatsby-plugin-svgr": "3.0.0-beta.0",
    "gatsby-source-filesystem": "3.14.0",
    "gatsby-transformer-sharp": "3.14.0",
    "normalize.css": "8.0.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-helmet": "6.1.0",
    "styled-components": "5.3.3"
  },
  "devDependencies": {
    "@svgr/webpack": "5.5.0",
    "@types/node": "16.11.12",
    "@types/react": "17.0.37",
    "@types/react-dom": "17.0.11",
    "@types/react-helmet": "6.1.4",
    "@types/styled-components": "5.1.17",
    "@typescript-eslint/eslint-plugin": "5.5.0",
    "@typescript-eslint/parser": "5.5.0",
    "eslint": "8.4.1",
    "eslint-config-airbnb": "19.0.2",
    "eslint-config-prettier": "8.3.0",
    "eslint-import-resolver-typescript": "2.5.0",
    "eslint-plugin-import": "2.25.3",
    "eslint-plugin-jsx-a11y": "6.5.1",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-react": "7.27.1",
    "eslint-plugin-react-hooks": "4.3.0",
    "gatsby-plugin-ts-config": "1.1.6",
    "lint-staged": "12.1.2",
    "plop": "2.7.6",
    "prettier": "2.5.1",
    "simple-git-hooks": "2.7.0",
    "stylelint": "14.1.0",
    "stylelint-config-recommended": "6.0.0",
    "stylelint-config-styled-components": "0.1.1",
    "stylelint-processor-styled-components": "1.10.0",
    "typescript": "4.5.2"
  },
  "simple-git-hooks": {
    "pre-commit": "npx tsc && npx lint-staged"
  },
  "lint-staged": {
    "src/**/*.{js,ts,tsx}": "eslint --fix",
    "src/**/*.ts": "stylelint"
  }
}
